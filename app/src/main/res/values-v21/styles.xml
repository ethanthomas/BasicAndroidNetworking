<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Home" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:actionBarStyle">@style/HomeStyle</item>
        <item name="android:icon">@drawable/invisible_0</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:colorAccent">@color/material_deep_teal_200</item>
        <item name="android:colorPrimary">@color/material_blue_grey_900</item>
        <item name="android:colorPrimaryDark">@color/material_blue_grey_900</item>
        <item name="android:colorControlHighlight">#0a8499</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="HomeStyle" parent="@android:Widget.ActionBar">
        <item name="android:background">@color/material_blue_grey_800</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>